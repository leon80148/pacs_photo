# ═══════════════════════════════════════════════
#  Photo PACS — 環境變數設定
#  預設值見 src/photo_pacs/settings.py
# ═══════════════════════════════════════════════

# ── 基本 ──────────────────────────────────────
PHOTO_PACS_PACS_BACKEND=mock          # mock | cstore | dicomweb
PHOTO_PACS_HIS_BACKEND=mock           # mock | http
# PHOTO_PACS_ENVIRONMENT=dev

# ── 檔案路徑 ──────────────────────────────────
PHOTO_PACS_UPLOAD_DIR=data/uploads
PHOTO_PACS_DICOM_DIR=data/dicom
PHOTO_PACS_SETTINGS_PATH=data/settings.json
PHOTO_PACS_KEEP_FILES_ON_SUCCESS=true
PHOTO_PACS_MAX_UPLOAD_MB=20

# ── C-STORE 連線（pacs_backend=cstore）────────
PHOTO_PACS_PACS_HOST=127.0.0.1
PHOTO_PACS_PACS_PORT=104
PHOTO_PACS_PACS_CALLED_AET=PACS
PHOTO_PACS_LOCAL_CALLING_AET=PHOTO_PACS

# ── C-STORE TLS（選用）────────────────────────
# PHOTO_PACS_PACS_TLS=false
# PHOTO_PACS_PACS_TLS_CA_FILE=
# PHOTO_PACS_PACS_TLS_CERT_FILE=
# PHOTO_PACS_PACS_TLS_KEY_FILE=

# ── DICOMweb 連線（pacs_backend=dicomweb）─────
# PHOTO_PACS_DICOMWEB_BASE_URL=https://host/dcm4chee-arc/aets/DCM4CHEE/rs
# PHOTO_PACS_DICOMWEB_VERIFY_TLS=true
# PHOTO_PACS_DICOMWEB_TIMEOUT_S=30
# PHOTO_PACS_DICOMWEB_AUTH_METHOD=none   # none | basic | bearer
# PHOTO_PACS_DICOMWEB_USERNAME=
# PHOTO_PACS_DICOMWEB_PASSWORD=
# PHOTO_PACS_DICOMWEB_TOKEN=

# ── DICOM 影像參數 ────────────────────────────
PHOTO_PACS_LOCAL_MODALITY=OT
PHOTO_PACS_LOCAL_RESIZE_MAX=1024
PHOTO_PACS_LOCAL_TRANSFER_SYNTAX=1.2.840.10008.1.2
PHOTO_PACS_LOCAL_CHARSET=ISO_IR 192

# ── DICOM 寫入旗標 ────────────────────────────
PHOTO_PACS_FLAG_INCLUDE_PATIENT_INFO_EXCEPT_ID=true
PHOTO_PACS_FLAG_INCLUDE_EXAM_DESCRIPTION=true
PHOTO_PACS_FLAG_THEME_DARK=true

# ── HIS / EMR 連線（his_backend=http）─────────
# PHOTO_PACS_HIS_BASE_URL=
# PHOTO_PACS_HIS_API_KEY=
# PHOTO_PACS_HIS_TIMEOUT_S=5
# PHOTO_PACS_HIS_RETRY=0

# ── Cloudflare Tunnel ─────────────────────────
# 從 Zero Trust 面板取得 Token
CLOUDFLARE_TUNNEL_TOKEN=
